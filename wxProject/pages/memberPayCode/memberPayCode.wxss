/* pages/payment/payment.wxss */

page {
  /* background: #F9EEDC; */
  background: #f5f5f5;
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  align-items: center;
}

canvas {
  position: absolute;
  z-index: -1;
}

.headImg {
  width: 170rpx;
  height: 170rpx;
  position: absolute;
  top: 60rpx;
  border-radius: 50%;
}


.box {
  box-sizing: border-box;
  position: absolute;
  top: 280rpx;
  width: 560rpx;
  height: 58rpx;
  border-radius: 34rpx;
  border: 14rpx solid #fff;
  background: #fb6a3d;
}

.leftY, .rightY {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  position: absolute;
  top: 138rpx;
  z-index: 666;
}

.leftY {
  left: -28rpx;
  background: #FD4E33
}

.rightY {
  right: -28rpx;
  background: #fe3128;
}

/* 中间整体的盒子 */
.paper {
  position: absolute;
  top: 309rpx;
  box-shadow: 2rpx 2rpx 6rpx 0rpx #999;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qr_code {
  width: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
  background: #fff;
}

/* 顶部阴影 */
.grayShadow {
  width: 100%;
  position: absolute;
  z-index: 4;
  left: 0;
  height: 30rpx;
  background: linear-gradient(#e4c1bb 5%, #fff);
}

.qr_code image {
  width: 70%;
}

.qr_code text {
  width: 100%;
  text-align: center;
  color: #fb6a3d;
}

.back {
  position: absolute;
  bottom: -150rpx;
  width: 50%;
  height: 80rpx;
  background: linear-gradient(to right, #fb6a3d, #ff2424);
  float: left;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.title {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 40rpx;
}

.ads_img {
  width: 90%;
  margin-bottom: 40rpx;
  text-align: center;
}

.ads_img image {
  width: inherit;
  height: 140rpx;
}

.footer {
  position: absolute;
  bottom: -14rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.footer>view {
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background: #f5f5f5;
  margin-top: 2rpx;
  box-shadow: inset 0px 6px 5px -3px #999;
}
