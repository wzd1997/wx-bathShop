/* pages/order/order.wxss */
.tab {
  float: left;
  width: 25%;
  text-align: center;
  padding: 20rpx 0;
}
 
.topTabSwiper {
  border-top: 1px solid #f5f5f5;
  zoom: 1;
  font-size: 28rpx;
}
 
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
 
.tabBorer {
  border-bottom: 4rpx solid #fb6a3d;
  color: #fb6a3d;
}
 
.swiper {
  width: 100%;
  margin-top: 20rpx;
}
 
.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
  padding: 80rpx 0;
}
scroll-view {
  box-sizing: border-box;
  padding: 40rpx 20rpx;
  background: #fff
}
.title {
  border-left: 4rpx solid #fb6a3d;
  /* margin: 20rpx 0; */

}
.title text {
  margin-left: 20rpx;
}

.wrapper image {
  /* width: 44%; */
  flex: 0 0 45%;
  margin: 14rpx 2.5%;

}
.picture{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-top: 20rpx;
}