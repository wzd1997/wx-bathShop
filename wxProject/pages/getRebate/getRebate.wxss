::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.tab {
  float: left;
  width: 33.33%;
  text-align: center;
  padding: 20rpx 0;
}

.topTabSwiper {
  border-top: 1px solid #f5f5f5;
  zoom: 1;
  font-size: 28rpx;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  border-bottom: 2px solid #eb5d39;
  color: #eb5d39;
}

.swiper {
  box-sizing: border-box;
  width: 100%;
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.reList {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.reList+.reList {
  margin-top: 20rpx;
}

.left {
  box-sizing: border-box;
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  background: #999;
  font-size: 32rpx;
  padding: 50rpx 30rpx;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  border-right: 2rpx dashed #fff;
}

.active .left{
  background: #eb5d39;
}

.mid {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  width: 390rpx;
  margin-left: 30rpx;
}

.timeRange {
  margin-top: 16rpx;
}

.count {
  margin-top: 12rpx;
}

.count text {
  border: 2rpx solid #999;
  padding: 2rpx 4rpx;
}
.active .count text {
  border: 2rpx solid #eb5d39;
  color: #eb5d39
}
.alreadyGet .count text {
  border: 2rpx solid #999;
  color: #999;
}
.right {
  padding: 34rpx 30rpx;
  width: 26rpx;
  vertical-align: middle;
  font-size: 26rpx;
  border-left: 2rpx dashed #eee;
}
.active .right {
  color: #eb5d39
}
.upPoint, .downPoint {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  position: absolute;
  background: #f5f5f5;
  z-index: 2;
  left: 185rpx;
}

.upPoint {
  top: -15rpx;
}

.downPoint {
  bottom: -15rpx;
}
