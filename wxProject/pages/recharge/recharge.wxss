/* pages/recharge/recharge.wxss */

page {
  background: #fff;
}

.information {
  width: 750rpx;
  height: 100rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 30rpx;
  border-left: 8rpx solid #fb6a3d;
}

.information>view {
  width: 420rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.information image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.information>image {
  width: 56rpx;
  height: 56rpx;
}

.title {
  width: 100%;
  height: 80rpx;
  text-indent: 14px;
  font-size: 13px;
  color: #333;
  line-height: 80rpx;
  background: #f5f5f5;
}

.typeTitle text {
  display: inline-block;
  width: 710rpx;
  height: 40px;
  line-height: 40px;
  font-size: 15px;
  margin-left: 26rpx;
  font-weight: bold;
  color: #fb6a3d;
}

.cardRe {
  width: 750rpx;
  flex-wrap: wrap;
  display: flex;
  justify-content: flex-start;
}

.cardRe>view {
  box-sizing: border-box;
  margin: 15rpx 0 10rpx 36rpx;
  width: 202rpx;
  padding: 0 10rpx;
  color: #999;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid #feccbc;
  border-radius: 6rpx;
}

.cardRe>view view {
  box-sizing: border-box;
  padding: 6rpx 30rpx;
  display: flex;
  align-items: center;
}

.cardRe>view view:first-of-type {
  height: 64rpx;
  font-size: 36rpx;
  border-top: 1rpx solid transparent;
  border-bottom: 1rpx solid #f0f0f0;
}

.cardRe>view view:last-of-type {
  height: 60rpx;
  border-top: 1rpx solid transparent;
  border-bottom: 1rpx solid transparent;
}

.cardRe>view.active {
  color: #fb6a3d;
  background: rgba(251, 106, 61, 0.1);
}

.cardRe>view.active view:first-of-type {
  border-bottom: 1rpx solid #fb6a3d;
}

.rechargeBtn {
  width: 100%;
  height: auto;
  border-top: 2px solid #fb6a3d;
  background: #fff;
  float: left;
  padding-bottom: 4%;
  padding-top: 4%;
}

.rechargeBtn button {
  width: 94%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  font-size: 15px;
  background: #fb6a3d;
  border-radius: 3px;
  margin-left: 3%;
  color: #fff;
}
