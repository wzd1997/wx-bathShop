.tab {
  float: left;
  width: 33.33%;
  text-align: center;
  padding: 20rpx 0;
}

.topTabSwiper {
  border-top: 1px solid #f5f5f5;
  zoom: 1;
  font-size: 28rpx;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  color: red;
}

.swiper {
  box-sizing: border-box;
  width: 100%;
  padding: 0 20rpx;
}

.redEnvelopesNum {
  box-sizing: border-box;
  /* width: 94%; */
  margin: 20rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx;
  color: #646464;
}

.redEnvelopesNum image {
  width: 44rpx;
  height: 44rpx;
}

.redEnvelopesNum>text {
  margin-left: 30rpx;
  flex-grow: 8;
}

.reList .reItem {
  display: flex;
  flex-direction: column;
  position: relative;
}

.reList .reItem+.reItem {
  margin-top: 20rpx;
}

.reList .reItem:last-child {
  margin-bottom: 20rpx;
}

.mark {
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.message {
  font-size: 34rpx;
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
}

.timeRange {
  margin-top: 10rpx;
}

.down {
  background: #fafafa;
  padding: 20rpx 30rpx;
  box-shadow: 0 2px 2px 0 #ddd;
}

.up {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
}

.leftPoint, .rightPoint {
  background: #f5f5f5;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  position: absolute;
  z-index: 3;
  bottom: 57rpx;
}

.leftPoint {
  left: -15rpx;
}

.rightPoint {
  right: -15rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.sign {
  width: 180rpx;
  position: absolute;
  right: 40rpx;
  top: 30rpx;
}
