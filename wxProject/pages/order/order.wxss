/* pages/order/order.wxss */

.tab {
  float: left;
  width: 20%;
  text-align: center;
  padding: 20rpx 0;
}

.topTabSwiper {
  border-top: 1px solid #f5f5f5;
  zoom: 1;
  font-size: 28rpx;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  border-bottom: 4rpx solid #fb6a3d;
  color: #fb6a3d;
}

.swiper {
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
  background: #fff;
  padding: 0 20rpx;
}

.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
  padding: 80rpx 0;
}

.order-item {
  box-sizing: border-box;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #eee;
}

.left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.left>view {
  margin-left: 20rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.left image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
}

.title {
  margin-bottom: 40rpx;
}

.right {
  position: relative;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.handle {
  border: 2rpx solid #fb6a3d;
  box-sizing: border-box;
  padding: 4rpx 8rpx;
}

.refuse {
  width: 80rpx;
  position: absolute;
  bottom:0;
  right: 120rpx;
  color: #ccc;
  border: 2rpx solid #ccc;
  box-sizing: border-box;
  padding: 4rpx 8rpx;
}
.noOrder {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -200rpx;
  margin-left: -200rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  /* margin-top: 50%; */
}
.noOrder image{
  width: 400rpx;
}
.noOrder text{
  margin-top: 20rpx;
}