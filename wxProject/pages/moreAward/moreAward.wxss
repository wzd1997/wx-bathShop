/* pages/integralShop/integralShop.wxss */

.integralShop-head-page {
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
}

.integralShop-head-page image {
  width: 34rpx;
  height: 34rpx;
}

.integralShop-head-page>view {
  box-sizing: border-box;
  padding: 10rpx 0;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.integral {
  border-right: 1rpx solid #f5f5f5;
}

.record {
  border-left: 1rpx solid #f5f5f5;
}

swiper {
  height: 300rpx;
}

swiper image {
  width: 100%;
  height: 300rpx;
}

.integralShop-nav {
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.integralShop-nav navigator {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.integralShop-nav navigator text {
  margin-top: 10rpx;
}

.integralShop-nav image {
  width: 80rpx;
  height: 80rpx;
}

.award-type {
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 20rpx;
  background: #fff;
  font-size: 30rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.award-type  image {
  width: 40rpx;
  height: 40rpx;
}

.award-type > view {
  display: flex;
  align-items: center;
}

.award-list {
  box-sizing: border-box;
  padding: 0 20rpx 20rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  flex: 0 0 50%;
}

.award-item {
  margin-top: 20rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  width: 345rpx;
  box-sizing: border-box;
  padding: 20rpx;
  justify-content: space-between;
}

.award-item  image {
  width: 305rpx;
  height: 230rpx;
}

.award-item > view > text {
  text-decoration: line-through;
  margin-left: 10rpx;
}

.award-list .award-item:nth-child(even) {
  margin-left: 20rpx;
}
