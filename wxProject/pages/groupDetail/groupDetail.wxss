/* pages/groupDetail/groupDetail.wxss */
/* 轮播图高度 */
swiper {
  height: 420rpx;
}
swiper image {
  width: 100%;
  height: 420rpx;
}

/* 头部 */
.headMsg {
  padding: 20rpx 30rpx;
}
.soldMsg {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}
.content {
  margin: 10rpx 0;
  line-height: 1.5
}
.price {
  display: flex;
  justify-content: flex-start;
  align-items: baseline;
}
.price view+view {
  margin-left: 30rpx;
}

/* 切换 */
.pageSwiper {
  box-sizing: border-box;
  margin-bottom: 112rpx;
}
.tab {
  float: left;
  width: 33.33%;
  text-align: center;
  padding: 20rpx 0;
  color: #999;
}
 
.topTabSwiper {
  margin-top: 20rpx;
  border-top: 1px solid #f5f5f5;
  zoom: 1;
  font-size: 28rpx;
}
 
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
 
.tabBorer {
  /* border-bottom: 4rpx solid #fb6a3d; */
  /* color: #fb6a3d; */
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
 
.swiper {
  width: 100%;
}
 
.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
  padding: 80rpx 0;
}
.swiper .rich-text {
  display: inline-block;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.pay {
  box-sizing: border-box;
  width: 100%;
  height: 112rpx;
  padding: 20rpx;
  border-top: 2rpx solid #ddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
}
.pay button {
  margin: 0;
}
/* 垫脚盒子 */
.help-block {
  width: 100%;
  height: 112rpx;
}