/* pages/memberExplain/memberExplain.wxss */

.title {
  position: relative;
  z-index: 999;
  display: flex;
  padding: 20rpx 30rpx;
  justify-content: space-between;
  align-items: center;
  background: rgb(251, 106, 61);
  color: #fff;
}

.hello {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.hello view {
  margin-top: 10rpx;
}

.backBtn {
  border: 2rpx solid #fff;
  padding: 4rpx 16rpx;
}

.rulesList {
  padding: 30rpx 30rpx 0 30rpx;
  margin-top: 20rpx;
}

.typeTitle {
  padding: 0rpx 26rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid rgb(251, 106, 61);
}

.rulesList .item-list:nth-child(2) .section {
  border-top: 2rpx solid rgb(251, 106, 61);
}
.useMethod {
  height: 400rpx;
  border-top: 2rpx solid rgb(251, 106, 61);
  padding: 20rpx 0;
}
.section {
  border-bottom: 2rpx solid #f5f5f5;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.section image {
  width: 50rpx;
  height: 50rpx;
}

.secTitle {
  display: flex;
  align-items: center;
}

.secTitle text {
  margin-left: 20rpx;
}

.downAngle {
  width: 16rpx;
  height: 16rpx;
  border-left: 4rpx solid #999;
  border-bottom: 4rpx solid #999;
  transform: rotateZ(-135deg);
}

.turn {
  transition: all 0.5s;
}

.angle-moved {
  transform: rotateZ(-45deg);
}

.content {
  box-sizing: border-box;
  width: 710rpx;
  margin: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx 40rpx;
}

.content image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.memberEx-headImg {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #ddd;
}

.headName {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.memberEx-address {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
}
